= form_for @product do |f|
  = f.label :name, 'Name'
  = f.text_field :name
  = f.label :price, 'Price'
  = f.text_field :price
  = f.label :description, 'Description'
  = f.text_field :description
  = f.label :availability_date, 'Availability date'
  = f.text_field :availability_date, placeholder: "Format: DD/MM/YYYY"
  = f.label :active_status_true, 'Active status'
  = f.radio_button :active_status, true
  = f.label :display_on_homepage_true, 'Availability date'
  = f.radio_button :display_on_homepage, true
  = f.submit 'Create product'