#basket
  .item_count
    %h2
      = pluralize current_basket.count, 'item'

- @products.each do |product|
  - if product.display_on_homepage
    .product
      %h3
        .product-name
          = link_to product.name, product
        .price
          = "Â£#{product.price}"
        .description
          = product.description
        .add_item_button
          = form_for current_basket do |f|
            = hidden_field_tag(:product_id, product.id)
            = f.submit "Add product to basket", class: "add_item_button"



